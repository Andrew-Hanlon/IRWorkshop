<Window x:Class="ImpulseHd.Ui.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImpulseHd.Ui"
        mc:Ignorable="d"
		x:Name="main"
		ResizeMode="NoResize"
		WindowStyle="SingleBorderWindow"
		WindowStartupLocation="CenterOwner"
        Title="About ImpulseEngine" Height="150" Width="500">
	<Grid>
		<Label FontSize="20">ImpulseEngine - Speaker Impulse Response Editor</Label>
		<Label Margin="0,30,0,0" Content="{Binding ElementName=main, Path=VersionString, FallbackValue=v1.2.3}"></Label>
		<TextBlock Margin="5,56,0,0" >
		<Hyperlink NavigateUri="https://github.com/ValdemarOrn/ImpulseEngine">
			<Label Foreground="CornflowerBlue" Padding="0">Official Website</Label>
		</Hyperlink>
		</TextBlock>
		
		<Label VerticalAlignment="Bottom" Margin="0,4">Developed by Valdemar Erlingsson</Label>
		<Button Width="100" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="Button_Click">Close</Button>
    </Grid>
</Window>
